<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.salim.salimzhulkhrni.student_marketplace">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- For Image -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- For Image -->

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.salim.salimzhulkhrni.student_marketplace.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.salim.salimzhulkhrni.student_marketplace.ProfileActivity"
                android:label="@string/title_activity_profile"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity android:name="com.salim.salimzhulkhrni.student_marketplace.ProfileActivityViewPage">
        </activity>
        <activity android:name="com.salim.salimzhulkhrni.student_marketplace.ListProductActivity">
        </activity>
        <activity android:name="com.salim.salimzhulkhrni.student_marketplace.ViewProductActivity">
        </activity>
        <activity android:name="com.salim.salimzhulkhrni.student_marketplace.AddProductActivity">
        </activity>
    </application>

</manifest>