<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="loginButton_MainAct">
        <item name="android:background">@color/loginbutton_bgcolor</item>
        <item name="android:textColor">#f8f8ff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="signUpButton_MainAct">
        <item name="android:background">@color/signupbutton_bgcolor</item>
        <item name="android:textColor">#f8f8ff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textInfo_Blue">
        <item name="android:textColor">#ffa07a</item>
    </style>

    <style name="Nav_View">
        <item name="android:textColorSecondary">#20b2aa</item>
        <item name="android:textSize">20sp</item>
    </style>

    <color name="loginbutton_bgcolor">#4169e1</color>
    <color name="signupbutton_bgcolor">#00bfff</color>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
