<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              tools:context=".ReferFragment">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/banner" android:id="@+id/imageView"/>

    <LinearLayout
            android:id="@+id/l3_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="vertical">

        <EditText
                android:id="@+id/email_refer_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:background="#f0f0f4"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/ic_shapes_2"
                android:drawablePadding="16dp"
        />

        <Button
                android:id="@+id/referbtn"
                android:text="Refer"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                style="@style/loginButton_MainAct"
        />

    </LinearLayout>

</LinearLayout>