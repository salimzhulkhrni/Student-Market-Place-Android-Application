<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="9.1dp"
        android:layout_marginRight="9.1dp"
        android:layout_marginTop="9.1dp">

    <LinearLayout
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingBottom="15dp"
            android:layout_marginRight="15dp"
            android:background="#ffffff">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/light_gray_rect"
                android:paddingBottom="20dp">

            <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    />
        </FrameLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
            <TextView
                    android:id="@+id/spinner_text"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="$120"
                    android:textSize="14sp"
                    android:textColor="#ef4e33" />

            <ImageView
                    android:id="@+id/favoriteHeart"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/uncolor_heart" />

        </LinearLayout>

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ninja high top\nsneackers"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"/>
    </LinearLayout>

</LinearLayout>