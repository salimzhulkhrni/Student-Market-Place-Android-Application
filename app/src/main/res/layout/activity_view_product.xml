<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewProductActivity">



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/toolbar"/>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                <ImageView
                        android:id="@+id/productImage"
                        android:layout_width="match_parent"
                        android:layout_height="406dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:padding="20dp"
                        app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/productName"
                        android:textColor="#212224"
                        android:textSize="25dp"
                        android:layout_marginLeft="19.21dp"
                        android:layout_marginTop="19.2dp"
                        android:layout_marginBottom="8.9dp"
                        android:text="AX Paris Short Sleeve"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="19.2dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/productPrice"
                            android:textColor="#0070d6"
                            android:textSize="16dp"
                            android:text="$ 25.99"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/productDescription"
                            android:layout_width="match_parent"
                            android:padding="15dp"
                            android:layout_height="250dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:paddingBottom="28.79dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="19.2dp"
            android:elevation="15dp">
        <Button
                android:id="@+id/contact_seller_view_product"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="@drawable/productpage_rect"
                android:text="Contact Seller"
                android:textColor="#ffffff" />

    </LinearLayout>



</RelativeLayout>