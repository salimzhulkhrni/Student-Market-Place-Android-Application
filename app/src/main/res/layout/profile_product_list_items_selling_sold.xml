<?xml version ="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="#cdc5bf"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="10dp"
                                    app:cardUseCompatPadding="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/profile_product_image"
                    android:layout_width="126dp"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:layout_gravity="left"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView

                            android:id="@+id/profile_product_name"
                            android:layout_width="0dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:paddingLeft="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight=".8"
                    />

                    <ImageView
                            android:id="@+id/profile_product_delete_product"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_delete_black"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                <TextView

                        android:id="@+id/profile_product_category_label"
                        android:layout_width="0dp"
                        android:layout_weight=".2"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:text="Category:"/>

                <TextView

                        android:id="@+id/profile_product_category_content"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                <TextView

                        android:id="@+id/profile_product_price_label"
                        android:layout_width="0dp"
                        android:layout_weight=".2"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Price:"/>

                <TextView

                        android:id="@+id/profile_product_price"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>


